@model EventsModel

@{
    Layout = null;
}

<div style="margin:auto" class="container">
    <div class="row">
        <div class="card">
            <article class="card-body">
                <form asp-action="AddOrEdit" asp-route-id="@Model.EventID" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="EventID" />
                    <div class="form-group">
                        <input type="text"
                               name="Subject"
                               id="Subject"
                               placeholder="Subject " />
                        <label for="Subject">Subject</label>
                    </div>
                    <div class="form-group">
                        <input type="text"
                               name="Description"
                               id="Description"
                               placeholder="Description" />
                        <label for="Description">Description</label>
                    </div>
                    <div class="form-group">
                        <input type="datetime"
                               name="Start"
                               id="Start"
                               placeholder="Start" />
                        <label for="Start">Start</label>
                    </div>
                    <div class="form-group">
                        <input type="datetime"
                               name="End"
                               id="End"
                               placeholder="End" />
                        <label for="End">End</label>
                    </div>
                    <div class="form-group">
                        <input type="text"
                               name="ThemeColor"
                               id="ThemeColor"
                               placeholder="ThemeColor" />
                        <label for="ThemeColor">ThemeColor</label>
                    </div>
                    <div class="form-group">
                        <input class="form-check-input" type="checkbox" asp-for="IsFullDay" /> @Html.DisplayNameFor(model => model.IsFullDay)
                        <label class="form-check-label">

                        </label>
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-block">Save</button>
                </form>
            </article>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}